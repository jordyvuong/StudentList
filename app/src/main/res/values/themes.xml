<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.StudentList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/link_color</item>
        <item name="colorSecondary">@color/link_color</item>

        <!-- Customisation des boutons -->
        <item name="buttonStyle">@style/MyButtonStyle</item>

        <!-- Fond blanc pour l'application -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Support des composants Material Design -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

    <!-- Thème principal de l'application -->
    <style name="Theme.StudentList" parent="Base.Theme.StudentList" />

    <!-- Style pour les activités sans ActionBar -->
    <style name="Theme.StudentList.NoActionBar" parent="Base.Theme.StudentList">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style personnalisé pour les boutons -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/link_color</item>
    </style>

    <!-- Thème pour fonctions supplémentaires -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/selector_navigation_icons</item>
        <item name="android:textColorPrimary">@color/icon_color</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>