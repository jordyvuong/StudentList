<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StudentList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Définir explicitement les couleurs ici -->
        <item name="colorPrimary">@color/link_color</item>
        <item name="colorSecondary">@color/link_color</item>

        <!-- Customisation des couleurs de bouton -->
        <item name="buttonStyle">@style/MyButtonStyle</item> <!-- Application du style personnalisé aux boutons -->

        <!-- Définir le fond blanc pour l'ensemble de l'application -->
        <item name="android:windowBackground">@color/white</item> <!-- Fond blanc -->
    </style>

    <!-- Applique le thème par défaut pour l'application -->
    <style name="Theme.StudentList" parent="Base.Theme.StudentList" />


    <!-- Style personnalisé pour les boutons -->
    <style name="MyButtonStyle">
        <item name="android:textColor">@color/white</item>  <!-- Couleur du texte du bouton -->
        <item name="android:background">@color/link_color</item>  <!-- Couleur de fond du bouton -->
    </style>

    <!-- Thème spécifique pour l'application (fonctions supplémentaires) -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Couleurs du fond -->
        <item name="android:windowBackground">@color/white</item> <!-- Fond blanc pour la fenêtre de l'application -->

        <!-- Couleur de la barre de navigation -->
        <item name="colorPrimary">@color/selector_navigation_icons</item> <!-- Utiliser l'icône de navigation -->

        <!-- Couleur des icônes -->
        <item name="android:textColorPrimary">@color/icon_color</item> <!-- Couleur des icônes -->

        <!-- Définir la couleur de la barre de statut -->
        <item name="android:statusBarColor">@color/white</item> <!-- Fond blanc pour la barre de statut -->
    </style>
</resources>